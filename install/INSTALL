#! /bin/sh

## parameters for this install
MLR_LIBPATH=/home/lib
MLR_URL=http://userpage.fu-berlin.de/mtoussai/smScpB076X

if [ ! -d $MLR_LIBPATH ] ; then
  echo "Creating lib directory: " $MLR_LIBPATH
  sudo mkdir $MLR_LIBPATH
  sudo chown $(id -u) $MLR_LIBPATH
  sudo chgrp $(id -u) $MLR_LIBPATH
fi

# install ubuntu packages
sudo apt-get install \
git-core \
gcc \
g++ \
gfortran \
make \
libgl1-mesa-dev \
libqhull-dev \
liblapack-dev \
bison \
freeglut3-dev \
libcv-dev \
libhighgui-dev \
libplib-dev \
libann-dev \
libdc1394-22-dev \
build-essential \
libx11-dev \
libxmu-dev \
libxi-dev \
libgl1-mesa-glx \
libglu1-mesa \
libglu1-mesa-dev \
libx11-dev \
libcvaux-dev \
flex \
libf2c2-dev \
libsdl1.2-dev \
realpath \
gnuplot \
doxygen \
libgtkglext1-dev \
\
regexxer \
meld

#install external libraries
./PHYSX_install
./ODE_install
#./IBDS_install