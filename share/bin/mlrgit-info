echo; echo '   *** BRANCHES ***'
git branch -a
echo; echo '   *** BRANCHES not merged in current HEAD (tip of currently checked-out branch) ***'
git branch -a --no-merge
echo; echo '   *** details on remote branches ***'
git remote show maserati
echo; echo '   *** STATUS ***'
git status
echo; echo '   *** info on HEAD ***'
git show HEAD
echo; echo '   *** tags ***'
git tag -l